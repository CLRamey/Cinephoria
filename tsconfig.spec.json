{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": ["node", "jest", "cypress"]
  },
  "include": [
    "tests/**/*.ts", 
    "tests/**/**/*.ts",
    "backend/src/**/*",
    "projects/cinephoria-web/src/**/*",
    "tests/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/coverage",
    "**/out-tsc",
    "**/*.svg",
    "**/*.png",
    "**/*.jpg",
    "**/*.jpeg",
    "**/*.gif",
    "**/*.webp"
  ]
}
