{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "test": "jest --config tests/jest.config.ts",
    "test:watch": "jest --watch",
    "test:unit:bk": "jest --config tests/jest.config.ts --detectOpenHandles --testPathPattern=tests/unit",
    "test:functional:bk": "jest --config tests/jest.config.ts --detectOpenHandles --testPathPattern=tests/functional",
    "test:integration:bk": "jest --config tests/jest.config.ts --detectOpenHandles --testPathPattern=tests/integration",
    "test:backend": "npm run test:unit:bk && npm run test:functional:bk && npm run test:integration:bk",
    "test:backend:all": "npm run test:unit:bk && npm run test:functional:bk && npm run test:integration:bk",
    "test:cov:bk": "jest --config tests/jest.config.ts --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Cin√©phoria backend",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.4.2",
    "mongoose": "^8.15.1",
    "nodemailer": "^7.0.3",
    "sequelize": "^6.37.7"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.15.23",
    "@types/nodemailer": "^6.4.17",
    "@types/sequelize": "^4.28.20",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
