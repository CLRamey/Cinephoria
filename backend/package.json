{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "docker:db": "docker compose -f docker-compose-db.yml up --build",
    "docker:db:down": "docker compose -f docker-compose-db.yml down -v",
    "docker:build": "npm run build && npm run start && npm run dev",
    "docker:build:prod": "npm run build && npm run start:prod",
    "seeder:add:users": "npx ts-node seeders/add_test_users_script.ts",
    "seeder:remove:users": "npx ts-node seeders/remove_test_users_script.ts",
    "test": "jest --config tests/jest.config.ts",
    "test:watch": "jest --watch",
    "test:unit:bk": "jest --config tests/jest.config.ts --detectOpenHandles --testPathPattern=tests/unit",
    "test:functional:bk": "jest --config tests/jest.config.ts --detectOpenHandles --testPathPattern=tests/functional",
    "test:integration:bk": "jest --config tests/jest.config.ts --detectOpenHandles --testPathPattern=tests/integration",
    "test:backend": "npm run test:unit:bk && npm run test:functional:bk && npm run test:integration:bk",
    "test:backend:all": "npm run test:unit:bk && npm run test:functional:bk && npm run test:integration:bk",
    "test:cov:bk": "jest --config tests/jest.config.ts --coverage"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Cin√©phoria backend",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mariadb": "^3.4.2",
    "mongoose": "^8.15.1",
    "nodemailer": "^7.0.3",
    "sanitize-html": "^2.17.0",
    "sequelize": "^6.37.7",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/node": "^22.15.23",
    "@types/nodemailer": "^6.4.17",
    "@types/sanitize-html": "^2.16.0",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.3",
    "@types/validator": "^13.15.2",
    "cross-env": "^10.0.0",
    "jest": "^29.7.0",
    "sequelize-auto": "^0.8.8",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
